---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="mx-auto max-w-6xl px-4 py-24 sm:px-6 lg:px-8 text-center">
    <h1 class="text-6xl font-bold text-[var(--foreground)]">404</h1>
    <p class="text-xl text-[var(--foreground-muted)] mt-4">
      The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="inline-block mt-8 px-6 py-3 bg-[var(--accent)] text-white rounded-lg hover:bg-[var(--accent-hover)] transition-colors"
    >
      Go back home
    </a>
  </div>
</BaseLayout>
