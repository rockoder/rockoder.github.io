---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ReadingProgress from '../components/ReadingProgress.astro';
import TableOfContents from '../components/TableOfContents.astro';
import TagCloud from '../components/TagCloud.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  date: Date;
  author?: string;
  tags?: string[];
  image?: string;
  headings?: { depth: number; slug: string; text: string }[];
}

const { title, description, date, author = 'Ganesh Pagade', tags = [], image, headings = [] } = Astro.props;

// Calculate reading time (rough estimate: 200 words per minute)
const content = await Astro.slots.render('default');
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      type="article"
      publishedTime={date.toISOString()}
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <ReadingProgress />
    <Header />

    <main class="flex-1">
      <article class="mx-auto max-w-4xl px-4 py-12 sm:px-6 lg:px-8">
        <!-- Article Header -->
        <header class="mb-10">
          <h1 class="text-3xl sm:text-4xl font-bold text-[var(--foreground)] mb-4">
            {title}
          </h1>

          <div class="flex flex-wrap items-center gap-4 text-sm text-[var(--foreground-muted)]">
            <time datetime={date.toISOString()}>
              {formattedDate}
            </time>
            <span class="text-[var(--border)]">/</span>
            <span>{readingTime} min read</span>
            {author && (
              <>
                <span class="text-[var(--border)]">/</span>
                <span>{author}</span>
              </>
            )}
          </div>

          {tags.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-2">
              {tags.map((tag) => (
                <a
                  href={`/blog/tag/${tag.toLowerCase()}/`}
                  class="rounded-full bg-[var(--background-secondary)] px-3 py-1 text-xs font-medium text-[var(--foreground-muted)] hover:bg-[var(--background-tertiary)] hover:text-[var(--foreground)] transition-colors"
                >
                  {tag}
                </a>
              ))}
            </div>
          )}
        </header>

        <div class="lg:grid lg:grid-cols-[1fr_200px] lg:gap-8">
          <!-- Article Content -->
          <div class="prose" id="article-content">
            <slot />
          </div>

          <!-- Sidebar: TOC and Tags (Desktop) -->
          <aside class="hidden lg:block">
            <div class="sticky top-20 space-y-8">
              {headings.length > 0 && (
                <TableOfContents headings={headings} />
              )}
              <TagCloud />
            </div>
          </aside>
        </div>

        <!-- Article Footer -->
        <footer class="mt-12 pt-8 border-t border-[var(--border)]">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <!-- Share buttons -->
            <div class="flex items-center gap-4">
              <span class="text-sm text-[var(--foreground-muted)]">Share:</span>
              <a
                href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(title)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[var(--foreground-muted)] hover:text-[var(--accent)] transition-colors"
                aria-label="Share on X"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[var(--foreground-muted)] hover:text-[var(--accent)] transition-colors"
                aria-label="Share on LinkedIn"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            </div>

            <!-- Back to blog -->
            <a
              href="/blog/"
              class="text-sm text-[var(--accent)] hover:text-[var(--accent-hover)] transition-colors"
            >
              &larr; Back to all posts
            </a>
          </div>
        </footer>
      </article>
    </main>

    <Footer />
  </body>
</html>
